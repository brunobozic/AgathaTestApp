@using MVC.Test.Helpers
@using Agathas.Storefront.Controllers.ViewModels.BasketSummaryView

<div id="smoverlay" class="smoverlay"></div>
<div id="basketSummary">
    <span class="basket-details">
        @Html.ActionLink("Your Basket", "Detail", "Basket")
        <span id="basket-summary-text">
            @foreach (var item in Model)
            {
                @*<div>
                        Name: @Html.DisplayFor(modelItem => item.Name) <br />
                        Phone: @Html.DisplayFor(modelItem => item.Phone)
                    </div>*@
            }
            @if (Model.NumberOfItems == 0)
            {
                @Html.Raw(" is empty ")
            }
            else
            {
                @Model.NumberOfItems @Html.Raw(" Item(s) at ") @Model.BasketTotal
            }
        </span>
    </span>
</div>
